<h1>Burger Devourer!</h1>

<h2>Burgers that are not Devoured!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <li>{{name}}<button class="bitchin-button" value="{{ id }}">Devoured!</button></li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that are Devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      <li>{{name}}</li>
      {{!-- {{> burgers/burger-block devoured=false}} --}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form" action="/api/burgers" method="POST">

  <div class="form-group">
    <label for="burgName">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>
  <button class="add" type="submit">Add Burger!</button>
</form>
